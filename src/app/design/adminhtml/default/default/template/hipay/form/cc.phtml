                    $$('#<?php echo $_code ?>_cc_type_cvv_div label span')[0].show();
                }
            }
        };

        Event.observe($('<?php echo $_code ?>_cc_type'), 'change', ToogleCvn<?php echo $_code ?>);
        ToogleCvn<?php echo $_code ?>();

        //]]>
